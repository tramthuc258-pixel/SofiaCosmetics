@model SofiaCosmetics.Models.KHACHHANG

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/resetpassword.css" />

<div class="reset-wrapper">
    <div class="reset-card">

        <h2>🔐 Đặt lại mật khẩu</h2>

        @if (TempData["Error"] != null)
        {
            <div class="reset-error">@TempData["Error"]</div>
        }

        <form method="post">
            <input type="hidden" name="token" value="@ViewBag.Token" />

            <input type="password" name="MatKhau" placeholder="Mật khẩu mới" required />
            <input type="password" name="XacNhanMatKhau" placeholder="Xác nhận mật khẩu" required />

            <button type="submit">Cập nhật mật khẩu</button>
        </form>

    </div>
</div>