@model SofiaCosmetics.Models.KHACHHANG

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/forgetpassword.css" />

<div class="forgot-wrapper">
    <div class="forgot-card">

        <h2>🔐 Quên mật khẩu</h2>

        @if (TempData["Error"] != null)
        {
            <div class="forgot-error">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="forgot-success">@TempData["Success"]</div>
        }

        <form method="post">
            <input type="email" name="Email" placeholder="Nhập email của bạn..." required />

            <button type="submit">Gửi yêu cầu</button>

            <div class="forgot-footer">
                <a href="/User/Login">← Quay lại đăng nhập</a>
            </div>
        </form>

    </div>
</div>
