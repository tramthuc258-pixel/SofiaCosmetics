<script>
    // ===== AUTO REFRESH NOTI mỗi 10s =====
    setInterval(() => {
        fetch('@Url.Action("GetNotifications","TrangChu", new { area="Admin" })')
            .then(r => r.json())
            .then(data => {
                const badge = document.getElementById("notiBadge");
                if (data.count > 0) {
                    badge.classList.remove("d-none");
                    badge.innerText = data.count;
                } else badge.classList.add("d-none");

                const menu = document.getElementById("notiMenu");
                let html = `
                    <li class="px-3 py-2 fw-bold">Thông báo</li>
                    <li><hr class="dropdown-divider"/></li>
                `;

                if (!data.items || data.items.length === 0) {
                    html += `<li class="px-3 py-2 text-muted">Chưa có thông báo mới</li>`;
                } else {
                    data.items.forEach(n => {
                        html += `
                        <li>
                          <a class="dropdown-item noti-item" href="${n.Url}">
                            <div class="fw-semibold">${n.Title}</div>
                            <div class="small text-muted">${n.SubTitle}</div>
                            <div class="small text-muted">${n.Time}</div>
                          </a>
                        </li>`;
                    });
                }

                html += `
                    <li><hr class="dropdown-divider"/></li>
                    <li><a class="dropdown-item text-center" href="/Admin/DonHang/Index">Xem tất cả</a></li>
                `;
                menu.innerHTML = html;
            });
    }, 10000);

    // ===== LOAD ADMIN INFO =====
    function loadAdminInfo() {
        fetch('@Url.Action("GetAdminInfo","TrangChu", new { area="Admin" })')
            .then(r => r.json())
            .then(res => {
                if (!res.ok) return;

                const a = res.data;
                document.getElementById("ai_id").value = a.MaAdmin;
                document.getElementById("ai_user").value = a.TenDangNhap;
                document.getElementById("ai_name").value = a.HoTen;
                document.getElementById("ai_email").value = a.Email;
                document.getElementById("ai_phone").value = a.SDT;
                document.getElementById("ai_role").value = a.VaiTro;

                const msgEl = document.getElementById("ai_msg");
                msgEl.innerText = "";
                msgEl.className = "admin-msg mt-3";
            });
    }

    // ===== SAVE ADMIN INFO =====
    function saveAdminInfo() {
        const hoTen = document.getElementById("ai_name").value;
        const email = document.getElementById("ai_email").value;
        const sdt = document.getElementById("ai_phone").value;
        const msgEl = document.getElementById("ai_msg");

        msgEl.innerText = "Đang lưu...";
        msgEl.className = "admin-msg mt-3 text-muted";

        fetch('@Url.Action("UpdateAdminInfo","TrangChu", new { area="Admin" })', {
            method: "POST",
            headers: { "Content-Type": "application/x-www-form-urlencoded" },
            body: `hoTen=${encodeURIComponent(hoTen)}&email=${encodeURIComponent(email)}&sdt=${encodeURIComponent(sdt)}`
        })
        .then(r => r.json())
        .then(res => {
            msgEl.innerText = res.msg;
            msgEl.className = res.ok
                ? "admin-msg mt-3 text-success"
                : "admin-msg mt-3 text-danger";

            if (res.ok) setTimeout(() => location.reload(), 800);
        })
        .catch(() => {
            msgEl.innerText = "Có lỗi xảy ra, thử lại!";
            msgEl.className = "admin-msg mt-3 text-danger";
        });
    }

    // ===== TOGGLE SHOW/HIDE PASSWORD =====
    function togglePassword(btn){
        const targetId = btn.getAttribute("data-target");
        const input = document.getElementById(targetId);
        const icon = btn.querySelector("i");

        if (input.type === "password") {
            input.type = "text";
            icon.className = "bi bi-eye-slash";
        } else {
            input.type = "password";
            icon.className = "bi bi-eye";
        }
    }

    // reset form đổi mk khi mở
    function resetChangePassForm() {
        ["cp_old","cp_new","cp_confirm"].forEach(id => {
            const inp = document.getElementById(id);
            if (inp) inp.value = "";
            if (inp) inp.classList.remove("is-invalid");
        });
        ["err_old","err_new","err_confirm"].forEach(id => {
            const er = document.getElementById(id);
            if (er) er.innerText = "";
        });
        const msgEl = document.getElementById("cp_msg");
        if (msgEl) msgEl.innerText = "";
    }

    // ===== CLIENT VALIDATION =====
    function validateChangePassword(){
        const oldp = document.getElementById("cp_old");
        const newp = document.getElementById("cp_new");
        const conf = document.getElementById("cp_confirm");

        const errOld = document.getElementById("err_old");
        const errNew = document.getElementById("err_new");
        const errConf = document.getElementById("err_confirm");

        [oldp,newp,conf].forEach(x => x.classList.remove("is-invalid"));
        [errOld,errNew,errConf].forEach(e => e.innerText = "");

        let ok = true;

        if (!oldp.value.trim()){
            oldp.classList.add("is-invalid");
            errOld.innerText = "Vui lòng nhập mật khẩu cũ";
            ok = false;
        }

        if (!newp.value.trim()){
            newp.classList.add("is-invalid");
            errNew.innerText = "Vui lòng nhập mật khẩu mới";
            ok = false;
        } else if (newp.value.length < 6){
            newp.classList.add("is-invalid");
            errNew.innerText = "Mật khẩu mới phải từ 6 ký tự";
            ok = false;
        }

        if (!conf.value.trim()){
            conf.classList.add("is-invalid");
            errConf.innerText = "Vui lòng xác nhận mật khẩu";
            ok = false;
        } else if (conf.value !== newp.value){
            conf.classList.add("is-invalid");
            errConf.innerText = "Xác nhận mật khẩu không khớp";
            ok = false;
        }

        return ok;
    }

    // validate realtime khi gõ
    ["cp_old","cp_new","cp_confirm"].forEach(id => {
        document.addEventListener("input", (e) => {
            if (e.target.id === id) validateChangePassword();
        });
    });

    // ===== CHANGE PASSWORD =====
    function changePassword() {

        if (!validateChangePassword()) return;

        const oldp = document.getElementById("cp_old").value;
        const newp = document.getElementById("cp_new").value;
        const conf = document.getElementById("cp_confirm").value;
        const msgEl = document.getElementById("cp_msg");

        msgEl.innerText = "Đang xử lý...";
        msgEl.className = "admin-msg mt-3 text-muted";

        fetch('@Url.Action("ChangePassword","TrangChu", new { area="Admin" })', {
            method: "POST",
            headers: { "Content-Type": "application/x-www-form-urlencoded" },
            body:
              `matKhauCu=${encodeURIComponent(oldp)}&matKhauMoi=${encodeURIComponent(newp)}&xacNhanMatKhau=${encodeURIComponent(conf)}`
        })
        .then(r => r.json())
        .then(res => {
            msgEl.innerText = res.msg;
            msgEl.className = res.ok
                ? "admin-msg mt-3 text-success"
                : "admin-msg mt-3 text-danger";

            if (!res.ok && res.msg.toLowerCase().includes("cũ")) {
                document.getElementById("cp_old").classList.add("is-invalid");
                document.getElementById("err_old").innerText = res.msg;
            }

            if (res.ok) {
                resetChangePassForm();

                setTimeout(() => {
                    const modalEl = document.getElementById("modalChangePass");
                    const modal = bootstrap.Modal.getInstance(modalEl);
                    modal.hide();
                }, 1200);
            }

            setTimeout(() => { msgEl.innerText = ""; }, 3000);
        })
        .catch(() => {
            msgEl.innerText = "Có lỗi xảy ra, thử lại!";
            msgEl.className = "admin-msg mt-3 text-danger";
        });
    }
</script>