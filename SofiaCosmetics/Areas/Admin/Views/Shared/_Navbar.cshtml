@using SofiaCosmetics.Areas.Admin.Controllers
@{
    var todayStr = DateTime.Now.ToString("dddd, dd/MM/yyyy",
        new System.Globalization.CultureInfo("vi-VN"));

    var range = (ViewBag.Range as string) ?? "today";
    var admin = ViewBag.AdminInfo;

    var notiCount = ViewBag.NotiCount ?? 0;
    var notis = ViewBag.NotiList as IEnumerable<TrangChuController.NotiDto>
                ?? new List<TrangChuController.NotiDto>();

    var adminName = ViewBag.ADMIN_NAME as string ?? "admin";
}

<div class="navbar-custom mb-3">
    <div class="navbar-inner d-flex flex-wrap justify-content-between align-items-center gap-2">

        <!-- LEFT -->
        <div class="left-block">
            <h5 class="mb-1 fw-bold title">Bảng điều khiển</h5>
            <div class="text-muted-soft">
                Xin chào <span class="fw-semibold">@(admin?.HoTen ?? adminName)</span> 👋
                <span class="dot">•</span> @todayStr
            </div>
        </div>

        <!-- RIGHT -->
        <div class="right-block d-flex align-items-center flex-wrap gap-2">

            <!-- FILTER RANGE -->
            <div class="filter-wrap">
                <i class="bi bi-calendar3"></i>
                <select class="form-select form-select-sm filter-select"
                        onchange="location.href='@Url.Action("Index","TrangChu", new { area="Admin" })?range=' + this.value;">
                    <option value="today" selected="@(range=="today")">Hôm nay</option>
                    <option value="7days" selected="@(range=="7days")">7 ngày gần đây</option>
                    <option value="month" selected="@(range=="month")">Tháng này</option>
                    <option value="year" selected="@(range=="year")">Năm nay</option>
                </select>
            </div>

            <!-- ĐƠN CHỜ XỬ LÝ -->
            <a href="@Url.Action("Index","DonHang", new { area="Admin", status="pending" })"
               class="btn btn-sm btn-primary-soft">
                <i class="bi bi-hourglass-split me-1"></i> Đơn chờ xử lý
            </a>

            <!-- THỐNG KÊ -->
            <a href="@Url.Action("Index","PhanTich", new { area="Admin"})"
               class="btn btn-sm btn-warning-soft">
                <i class="bi bi-bar-chart-line me-1"></i> Thống kê
            </a>

            <!-- NOTI + ADMIN -->
            <div class="user-wrap d-flex align-items-center gap-2 ms-1">

                <!-- NOTIFICATIONS -->
                <div class="dropdown">
                    <button class="noti-btn dropdown-toggle" type="button"
                            id="notiDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-bell"></i>
                        <span id="notiBadge" class="noti-badge @(notiCount>0?"":"d-none")">
                            @notiCount
                        </span>
                    </button>

                    <ul class="dropdown-menu dropdown-menu-end noti-menu"
                        id="notiMenu" aria-labelledby="notiDropdown">
                        <li class="px-3 py-2 fw-bold">Thông báo</li>
                        <li><hr class="dropdown-divider" /></li>

                        @if (!notis.Any())
                        {
                            <li class="px-3 py-2 text-muted">Chưa có thông báo mới</li>
                        }
                        else
                        {
                            foreach (var n in notis.Take(6))
                            {
                                <li>
                                    <a class="dropdown-item noti-item" href="@n.Url">
                                        <div class="fw-semibold">@n.Title</div>
                                        <div class="small text-muted">@n.SubTitle</div>
                                        <div class="small text-muted">@n.Time.ToString("HH:mm dd/MM")</div>
                                    </a>
                                </li>
                            }
                        }

                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <a class="dropdown-item text-center" href="/Admin/DonHang/Index">
                                Xem tất cả
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- ADMIN DROPDOWN -->
                <div class="dropdown">
                    <button class="user-chip dropdown-toggle" type="button"
                            id="adminDropdown" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-1"></i>
                        @(admin?.HoTen ?? adminName)
                    </button>

                    <ul class="dropdown-menu dropdown-menu-end admin-menu" aria-labelledby="adminDropdown">
                        <li class="px-3 py-2">
                            <div class="fw-bold">@(admin?.HoTen ?? "admin")</div>
                            <div class="small text-muted">@(admin?.Email ?? "")</div>
                            <div class="small text-muted">@(admin?.VaiTro ?? "")</div>
                        </li>

                        <li><hr class="dropdown-divider" /></li>

                        <li>
                            <button class="dropdown-item"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalAdminInfo"
                                    onclick="loadAdminInfo()">
                                <i class="bi bi-person-lines-fill me-2"></i> Thông tin admin
                            </button>
                        </li>

                        <li>
                            <button class="dropdown-item"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalChangePass"
                                    onclick="resetChangePassForm()">
                                <i class="bi bi-shield-lock me-2"></i> Đổi mật khẩu
                            </button>
                        </li>

                        <li><hr class="dropdown-divider" /></li>

                        <li>
                            <a class="dropdown-item text-danger" href="/Admin/DangNhap/Logout">
                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>


<!-- ================= MODAL THÔNG TIN ADMIN ================= -->
<div class="modal fade" id="modalAdminInfo" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content admin-modal">
            <div class="modal-header admin-modal__header">
                <div class="d-flex align-items-center gap-2">
                    <div class="admin-modal__icon">
                        <i class="bi bi-person-badge"></i>
                    </div>
                    <div>
                        <div class="admin-modal__title">Thông tin admin</div>
                        <div class="admin-modal__subtitle">Cập nhật hồ sơ quản trị</div>
                    </div>
                </div>

                <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body admin-modal__body">
                <input type="hidden" id="ai_id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label admin-label">Tên đăng nhập</label>
                        <div class="input-icon">
                            <i class="bi bi-person"></i>
                            <input class="form-control admin-input" id="ai_user" disabled />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label admin-label">Vai trò</label>
                        <div class="input-icon">
                            <i class="bi bi-shield-check"></i>
                            <input class="form-control admin-input" id="ai_role" disabled />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label admin-label">Họ tên</label>
                        <div class="input-icon">
                            <i class="bi bi-card-text"></i>
                            <input class="form-control admin-input" id="ai_name" placeholder="Nhập họ tên" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label admin-label">Email</label>
                        <div class="input-icon">
                            <i class="bi bi-envelope"></i>
                            <input class="form-control admin-input" id="ai_email" placeholder="Nhập email" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label admin-label">Số điện thoại</label>
                        <div class="input-icon">
                            <i class="bi bi-telephone"></i>
                            <input class="form-control admin-input" id="ai_phone" placeholder="Nhập SĐT" />
                        </div>
                    </div>
                </div>

                <div id="ai_msg" class="admin-msg mt-3"></div>
            </div>

            <div class="modal-footer admin-modal__footer">
                <button class="btn btn-light admin-btn__ghost" data-bs-dismiss="modal">
                    Đóng
                </button>
                <button class="btn admin-btn__primary" onclick="saveAdminInfo()">
                    <i class="bi bi-save me-1"></i> Lưu thay đổi
                </button>
            </div>
        </div>
    </div>
</div>


<!-- ================= MODAL ĐỔI MẬT KHẨU (EYE + VALIDATE) ================= -->
<div class="modal fade" id="modalChangePass" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content admin-modal">
            <div class="modal-header admin-modal__header">
                <div class="d-flex align-items-center gap-2">
                    <div class="admin-modal__icon">
                        <i class="bi bi-key"></i>
                    </div>
                    <div>
                        <div class="admin-modal__title">Đổi mật khẩu</div>
                        <div class="admin-modal__subtitle">Bảo mật tài khoản quản trị</div>
                    </div>
                </div>

                <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body admin-modal__body">

                <div class="mb-3">
                    <label class="form-label admin-label">Mật khẩu cũ</label>
                    <div class="input-icon input-password">
                        <i class="bi bi-lock"></i>
                        <input type="password" class="form-control admin-input" id="cp_old"
                               placeholder="Nhập mật khẩu cũ" />
                        <button type="button" class="pw-toggle" data-target="cp_old" onclick="togglePassword(this)">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <small class="field-error" id="err_old"></small>
                </div>

                <div class="mb-3">
                    <label class="form-label admin-label">Mật khẩu mới</label>
                    <div class="input-icon input-password">
                        <i class="bi bi-lock-fill"></i>
                        <input type="password" class="form-control admin-input" id="cp_new"
                               placeholder="Tối thiểu 6 ký tự" />
                        <button type="button" class="pw-toggle" data-target="cp_new" onclick="togglePassword(this)">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <small class="field-error" id="err_new"></small>
                </div>

                <div class="mb-1">
                    <label class="form-label admin-label">Xác nhận mật khẩu mới</label>
                    <div class="input-icon input-password">
                        <i class="bi bi-check2-circle"></i>
                        <input type="password" class="form-control admin-input" id="cp_confirm"
                               placeholder="Nhập lại mật khẩu mới" />
                        <button type="button" class="pw-toggle" data-target="cp_confirm" onclick="togglePassword(this)">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <small class="field-error" id="err_confirm"></small>
                </div>

                <div id="cp_msg" class="admin-msg mt-3"></div>
            </div>

            <div class="modal-footer admin-modal__footer">
                <button class="btn btn-light admin-btn__ghost" data-bs-dismiss="modal">
                    Đóng
                </button>
                <button class="btn admin-btn__primary" onclick="changePassword()">
                    <i class="bi bi-shield-lock me-1"></i> Đổi mật khẩu
                </button>
            </div>
        </div>
    </div>
</div>



