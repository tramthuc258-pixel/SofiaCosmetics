@{
    Layout = null;
    ViewBag.Title = "Đăng nhập Admin";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        :root{
            /* PEACH NUDE palette */
            --peach:#e7a07a;           /* main cam đào dịu */
            --peach-dark:#d98e67;      /* hover */
            --peach-soft:#fff4ee;      /* nền nhạt */
            --cream:#faf6f1;           /* kem nude */
            --ink:#111827;
            --muted:#6b7280;
            --border:#e7e7ea;
            --bg:#f7f8fb;
            --card:#ffffff;
        }
        *{box-sizing:border-box}
        body{
            margin:0;
            font-family:Inter,system-ui,-apple-system,sans-serif;
            color:var(--ink);
            min-height:100vh;
            display:grid;
            place-items:center;
            background:
                radial-gradient(1100px 640px at 12% -12%, var(--peach-soft), transparent 60%),
                radial-gradient(1000px 560px at 110% 0%, #f7f0e8, transparent 55%),
                linear-gradient(180deg, var(--cream), var(--bg));
            padding:22px;
        }

        .card{
            width:min(440px, 100%);
            background:var(--card);
            border:1px solid var(--border);
            border-radius:16px;
            padding:22px 22px 18px;
            box-shadow:
                0 16px 50px rgba(17,24,39,.10),
                0 2px 6px rgba(17,24,39,.05);
        }

        .brand{
            display:flex; align-items:center; gap:12px;
        }
        .logo{
            width:44px;height:44px;border-radius:12px;
            display:grid;place-items:center;
            font-weight:900; letter-spacing:.4px;
            color:var(--peach);
            background:var(--peach-soft);
            border:1px solid #f3d4c4;
        }
        .brand .name{
            font-weight:800; font-size:16px; line-height:1.1;
        }
        .brand .small{
            font-size:12px; color:var(--muted); font-weight:600;
        }

        .divider{
            height:1px;
            background:#f0f0f0;
            margin:14px 0 14px;
        }

        h1{
            font-size:21px;
            font-weight:800;
            margin:0 0 6px;
            letter-spacing:-0.2px;
        }
        .sub{
            font-size:14px;
            color:var(--muted);
            margin-bottom:14px;
            line-height:1.5;
        }

        label{
            display:block;
            font-size:12.8px;
            font-weight:700;
            margin:10px 0 6px;
        }

        .input{ position:relative; }
        .input input{
            width:100%;
            padding:11px 12px 11px 40px;
            font-size:14.5px;
            border:1px solid var(--border);
            border-radius:10px;
            outline:none;
            transition:.15s ease;
            background:#fff;
        }
        .input input:focus{
            border-color:#efc3ad;
            box-shadow:0 0 0 3px rgba(231,160,122,.12);
        }
        .icon{
            position:absolute; left:11px; top:50%;
            transform:translateY(-50%);
            width:18px;height:18px;
            color:#9ca3af;
        }
        .input input:focus + .icon{ color:var(--peach); }

        .row{
            margin-top:12px;
            display:flex;
            justify-content:space-between;
            align-items:center;
            font-size:13px;
            color:#374151;
        }
        .remember{
            display:flex;align-items:center;gap:7px;
            font-weight:600;
        }
        .remember input{accent-color:var(--peach);}
        .hint{ color:var(--muted); font-size:12px; }

        .btn{
            width:100%;
            margin-top:14px;
            padding:11px 14px;
            border:none;
            border-radius:10px;
            cursor:pointer;
            color:#fff;
            font-weight:800;
            font-size:15px;

            /* gradient peach nhẹ */
            background:linear-gradient(180deg, var(--peach), var(--peach-dark));
            box-shadow:0 10px 24px rgba(231,160,122,.28);
            transition:.15s ease;
        }
        .btn:hover{filter:brightness(.98)}
        .btn:active{transform:translateY(1px)}

        .alert{
            margin-top:10px;
            padding:9px 11px;
            border-radius:9px;
            font-size:14px;
            font-weight:700;
            background:#fff1f2;
            color:#b4233a;
            border:1px solid #ffd4da;
            display:@(ViewBag.Error != null ? "block" : "none");
        }

        .footer{
            margin-top:14px;
            display:flex;
            justify-content:space-between;
            font-size:12px;
            color:var(--muted);
        }
        .footer a{
            color:var(--muted);
            text-decoration:none;
            font-weight:700;
        }
        .footer a:hover{color:#111827}

        @@media(max-width:420px){
            .card{padding:18px 18px 14px;}
        }
    </style>
</head>
<body>

    <section class="card">
        <div class="brand">
            <div class="logo">SC</div>
            <div>
                <div class="name">Sofia Cosmetics</div>
                <div class="small">Admin Portal</div>
            </div>
        </div>

        <div class="divider"></div>

        <h1>Đăng nhập quản trị</h1>
        <div class="sub">Vui lòng nhập tài khoản admin.</div>

        @using (Html.BeginForm("Login", "DangNhap", new { area = "Admin" }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <label>Tên đăng nhập / Email</label>
            <div class="input">
                <input name="tenDangNhap" type="text" placeholder="Nhập tên đăng nhập" required />
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                     stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 21c0-3.3-3.6-6-8-6s-8 2.7-8 6"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
            </div>

            <label>Mật khẩu</label>
            <div class="input">
                <input name="matKhau" type="password" placeholder="Nhập mật khẩu" required />
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                     stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="11" width="18" height="10" rx="2"></rect>
                    <path d="M7 11V8a5 5 0 0 1 10 0v3"></path>
                </svg>
            </div>

            <div class="row">
                <label class="remember">
                    <input type="checkbox" />
                    Ghi nhớ đăng nhập
                </label>
                <span class="hint">Chỉ dùng nội bộ</span>
            </div>

            <button class="btn" type="submit">Đăng nhập</button>
            <div class="alert">@ViewBag.Error</div>
        }

        <div class="footer">
            <span>© @DateTime.Now.Year Sofia Cosmetics</span>
            <a href="@Url.Action("Index","Home", new { area = "" })">Về trang chủ</a>
        </div>
    </section>

</body>
</html>
